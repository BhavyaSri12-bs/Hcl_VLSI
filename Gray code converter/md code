`timescale 1ns/1ps
module binary_to_gray (
    input  wire [3:0] bin,
    output reg  [3:0] gray
);
    // Convert binary to gray whenever input changes
    always @(*) begin
        gray[3] = bin[3];
        gray[2] = bin[3] ^ bin[2];
        gray[1] = bin[2] ^ bin[1];
        gray[0] = bin[1] ^ bin[0];
    end
endmodule
